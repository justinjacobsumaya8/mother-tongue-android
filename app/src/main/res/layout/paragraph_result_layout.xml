<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layoutNavBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightBlue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutNav"
            android:layout_marginTop="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/baseline_chevron_left_black_36dp"
                android:gravity="center"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Back"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_medium"/>

            <Button
                android:id="@+id/btnChangeLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/round_shape_btn"
                android:drawableStart="@drawable/change_language_icon"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingLeft="16dp"
                android:paddingTop="2dp"
                android:paddingRight="16dp"
                android:paddingBottom="2dp"
                android:text="@string/english"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:elevation="2dp"
                android:fontFamily="@font/montserrat_medium"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layoutNav2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutNav"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:text="Kana ang Akong \nIkaduhang Gusto!"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Gisulat ni:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_medium"/>

                <TextView
                    android:id="@+id/txtAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Florida R. Matic"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Gihubad ni:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_medium"/>

                <TextView
                    android:id="@+id/txtTranslatedBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="James M. Gaje"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/image"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/reading_drills_1"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_below="@+id/layoutNavBg">

        <TextView
            android:id="@+id/txtDetail1"
            android:fontFamily="@font/montserrat_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Krinnnng…! Dungan nga nanindug ang mga bata ug nag-ampo. Pagkahuman hilom nga naglinya ang mga bata ug nanggawas paingon sa kantina." />

        <TextView
            android:id="@+id/txtDetail2"
            android:fontFamily="@font/montserrat_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Nakita nila ang nagkalain-lain nga pagkaon nga nakahan-ay sa lamesa. Adunay baligyang puto, supas, linuto nga saging, ginataan nga mais, ug lugaw. Aduna usab bugnaw nga gulaman ug bugnaw mga tubig didto sa kantina." />

        <TextView
            android:id="@+id/txtDetail3"
            android:fontFamily="@font/montserrat_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="“Wow, kalami sa mga pagkaon nga anaa sa atong kantina!” matod pa sa  mga bata." />

        <TextView
            android:id="@+id/txtDetail4"
            android:fontFamily="@font/montserrat_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="“Kini tanan paborito nako,” matod sa usa ka bata.
“Dili lang kay lami, makabusog ug makapahimsog sad ang mga pagkaon nga tinda sa atong kantina,” matod pa sa uban." />

        <TextView
            android:id="@+id/txtDetail5"
            android:fontFamily="@font/montserrat_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="“Pagkahuman ug pamalit, nanglingkod ang mga bata sa bangko. Hilom lang sila nga nangaon." />

        <TextView
            android:id="@+id/txtDetail6"
            android:fontFamily="@font/montserrat_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="““Kringgg!” Nanindog ang mga bata ug naglinya pag-usab aron mamalik og sulod sa ilang tunghaan." />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutBody">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            app:cardBackgroundColor="@color/cardColor">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtDiscussTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hisgutan Nato"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium"/>

                <TextView
                    android:id="@+id/txtDiscussSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtDiscussTitle"
                    android:layout_marginTop="6dp"
                    android:text="Basaha ang mga hugpulong."
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_medium"/>

                <TextView
                    android:id="@+id/txtDiscussSentence1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Daghan ang sustansiyado nga pagkaon sa kantina."
                    android:textSize="14sp"
                    android:layout_below="@+id/txtDiscussSubTitle"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_medium"/>

                <TextView
                    android:id="@+id/txtDiscussSentence2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Adunay puto, supas, ginataan nga mais, ug bugnaw nga gulaman sa kantina."
                    android:textSize="14sp"
                    android:layout_below="@+id/txtDiscussSentence1"
                    android:fontFamily="@font/montserrat_medium"/>

                <TextView
                    android:id="@+id/txtDiscussSentence3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Hapsay nga naglinya ang mga bata aron makapalit sa ilang pagkaon."
                    android:textSize="14sp"
                    android:layout_below="@+id/txtDiscussSentence2"
                    android:fontFamily="@font/montserrat_medium"/>

                <TextView
                    android:id="@+id/txtDiscussSentence4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Pagkahuman og pamalit, nanglingkod ang mga bata sa bangko."
                    android:textSize="14sp"
                    android:layout_below="@+id/txtDiscussSentence3"
                    android:fontFamily="@font/montserrat_medium"/>

                <TextView
                    android:id="@+id/txtDiscussSentence5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. Pagkadungog sa bagting, nanindog ang mga bata aron mobalik sa klase."
                    android:textSize="14sp"
                    android:layout_below="@+id/txtDiscussSentence4"
                    android:fontFamily="@font/montserrat_medium"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>