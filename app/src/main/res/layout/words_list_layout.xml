<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp">

            <LinearLayout
                android:id="@+id/layoutTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Sapa"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtEnglishDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English: Stream"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/txtTitle"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textStyle="italic"
                    android:fontFamily="@font/montserrat_medium"/>

                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Porma sa tubig nga nagaagas gikan sa tubod"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/txtEnglishDescription"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/montserrat_medium"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/btnSpeak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:src="@drawable/baseline_campaign_white_24dp"
                android:layout_alignEnd="@+id/layoutTxt"
                android:layout_alignTop="@+id/layoutTxt"
                android:padding="5dp"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>