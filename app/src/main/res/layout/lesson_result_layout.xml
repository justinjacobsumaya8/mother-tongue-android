<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layoutBody1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/txtLesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pagtulun-an 8"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"/>

        <TextView
            android:id="@+id/txtBodyTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Katuyoan"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_medium"/>

        <TextView
            android:id="@+id/txtBodyDescription1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mailhan ug magamit ang mga pulong nga adunay daghan og buot ipasabot"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_medium"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutBody1Image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutBody1"
        android:layout_marginTop="12dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/body1Image"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:src="@drawable/lesson_8_body_1" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutBody2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_below="@+id/layoutBody1Image"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/txtBodyTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nasayod ka Niini!"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_medium"/>

        <TextView
            android:id="@+id/txtBodyDescription2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nailhan mo ba ang anaa sa mga hulagway?"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_medium"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBody2Images1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutBody2"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="12dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/cardColorPink"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/body2Image1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:src="@drawable/washing_line"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="12dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/cardColorGreen"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/body2Image2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:src="@drawable/tree"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBody2Images2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutBody2Images1"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:padding="12dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/cardColorYellow"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/body2Image3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:src="@drawable/fish"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="14dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/cardColorBlue"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/body2Image4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:src="@drawable/water_basin"
                android:layout_margin="10dp"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBody3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_below="@+id/layoutBody2Images2"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/txtBody3Title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pagpalambo"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_medium"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutCardBody3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutBody3"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardBody3Description1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:id="@+id/layoutBody3Description1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtBody3Card1Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sapa"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/montserrat_bold"/>

                <TextView
                    android:id="@+id/txtBody3Card1Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="– porma sa tubig nga nagaagas gikan sa tubod"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/montserrat_medium"/>

                <TextView
                    android:id="@+id/txtBody3Card1Example"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Naligo ang mga bata sa sapa"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/montserrat_medium"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardBody3Description2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white"
            android:layout_below="@+id/cardBody3Description1"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/layoutBody3Description2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtBody3Card2Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kabo"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/montserrat_bold"/>

                <TextView
                    android:id="@+id/txtBody3Card2Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="– gigamit sa pagkuha sa tubig"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/montserrat_medium"/>

                <TextView
                    android:id="@+id/txtBody3Card2Example"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Si Mona nagbitbit ug kabo"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/montserrat_medium"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardBody3Description3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white"
            android:layout_below="@+id/cardBody3Description2"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/layoutBody3Description3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtBody3Card3Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gapangsabsab"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/montserrat_bold"/>

                <TextView
                    android:id="@+id/txtBody3Card3Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="– pagkaon sa baka sa mga sagbot "
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/montserrat_medium"/>

                <TextView
                    android:id="@+id/txtBody3Card3Example"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Si Mona nagbitbit ug kabo"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/montserrat_medium"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutCardBody3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnTakeQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take Quiz"
            android:padding="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="20sp"
            android:background="@drawable/round_shape_btn"
            android:textColor="@color/white"
            android:gravity="center"
            android:fontFamily="@font/montserrat_medium"/>

    </LinearLayout>

</RelativeLayout>